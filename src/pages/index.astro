---
import BaseLayout from "../layouts/BaseLayout.astro";
import HorizontalCard from "../components/HorizontalCard.astro";
import { getCollection } from "astro:content";
import createSlug from "../lib/createSlug"

const posts = (await getCollection("blog")).sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf());

const last_posts = posts.slice(0, 3);
---

<BaseLayout sideBarActiveItemID="home">
  <div class="pb-12 mt-5">
    <div class="text-xl py-1">Hi, Selamat berbelanja!👋</div>
    <div class="text-5xl font-bold">SYARIEF NURSERY</div>
    <div class="py-2">
      <text class="text-lg">
        Produk berkualitas dengan harga yang <b>pantas!</b>
      </text>
    </div>
    <div class="mt-8">
      <a class="btn" href="https://api.whatsapp.com/send/?phone=%2B62895333221691" target="_blank">Hubungi Admin</a>
      <a href="store" class="btn btn-outline ml-5">
        Halaman Produk 🛒
      </a>
    </div>
  </div>

  <div>
    <div class="text-3xl w-full font-bold mb-2">Produk Baru Ditambahkan {":"}</div>
  </div>

  <HorizontalCard
    title="Anggur"
    img="/anggur_2.jpg"
    desc="Produk baru dari 𝗦𝗬𝗔𝗥𝗜𝗘𝗙 𝗡𝗨𝗥𝗦𝗘𝗥𝗬! Anggur berkualitas dan cocok untuk pemula."
    url="store/item1"
    badge="Terbaru"
  />
  <div class="divider my-0"></div>
  <HorizontalCard
    title="Melon Manis"
    img="/melon.jpg"
    desc="Produk terbaru dari 𝗦𝗬𝗔𝗥𝗜𝗘𝗙 𝗡𝗨𝗥𝗦𝗘𝗥𝗬 Melon manis yang menyegarkan saat cuaca panas.."
    url="store/item2"
    badge="Terbaru"
  />
  <div class="divider my-0"></div>
  <HorizontalCard
    title="Buah Tin"
    img="/tin.jpeg"
    desc="Manfaat buah tin tidak perlu diragukan lagi, cocok untuk yang mager!"
    url="store/item3"
    badge="Terbaru"
  />

  <div>
    <div class="text-3xl w-full font-bold mb-5 mt-10">Latest from blog</div>
  </div>

  {
    last_posts.map((post) => (
      <>
        <HorizontalCard
          title={post.data.title}
          img={post.data.heroImage}
          desc={post.data.description}
          url={"/blog/" + createSlug(post.data.title, post.slug)}
          target="_self"
          badge={post.data.badge}
        />
        <div class="divider my-0" />
      </>
    ))
  }
</BaseLayout>
